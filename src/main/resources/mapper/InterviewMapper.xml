<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.outerpack.mapper.InterviewMapper">


    <select id="getAllInterview" resultType="com.outerpack.entity.pojo.Interview">
        select * from interview;
    </select>



    <select id="getInterviewByCandidateId" resultType="com.outerpack.entity.pojo.Interview">
        select *
        from interview
        where can_id=#{ID};
    </select>
    <select id="getInterviewByHrId" resultType="com.outerpack.entity.pojo.Interview">
        select *
        from interview
        where hr_id=#{ID};
    </select>
    <select id="getInterviewByInterviewId" resultType="com.outerpack.entity.pojo.Interview">
        select *
        from interview
        where inter_id=#{ID}
    </select>
    <insert id="addInterview" parameterType="com.outerpack.entity.pojo.Interview">
        insert into interview (inter_id,hr_id,can_id,inter_detail)
        values (#{interId},#{hrId},#{canId},#{interDetail})
    </insert>
    <delete id="deleteInterviewById">
        delete from interview
        where inter_id=#{ID}
    </delete>
    <update id="updateInterviewById">
        update interview
        set inter_detail=#{detail}
        where inter_id=#{ID}
    </update>
    <select id="getInterviewCount">
        select count(*)
        from interview
    </select>

</mapper>